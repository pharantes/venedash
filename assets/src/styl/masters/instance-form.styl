
.form-container {
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.25);
    border-radius: 8px 8px 0 0;
    max-width: 768px;
    margin: 2rem auto;
    padding-left: 0;
    padding-right: 0;

    .form-header {
        margin: 0;
        background-image: url('../img/Dash_Contact_Form_Header_V4.jpg');
        background-repeat: no-repeat;
        background-size: contain;
        background-position: center;
        height: 260px;
        width: 100%;
    }

    .dash-instance-form {
        padding: 2rem;

        p {
            font-weight: 600;
        }

        .form-group {
            input {
                max-width: 95%;
            }
        }

        #confirmation-error {
            color: tomato;
        }
    }
}
