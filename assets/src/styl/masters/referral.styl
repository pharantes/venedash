#referral-page {
    label input[name='outreach-method'] {
        visibility: hidden;
    }

    .form-check-inline .form-check-input {
        position: absolute;
    }

    .outreach-method-label {
        display: block;
        padding: 0;
        height: 20px;
    }

    .outreach-method-img {
        display: inline-block;
        padding: 0px;
        height: 16px;
        width: 16px;
        border: .8px solid rgba(0,0,0,0.3)
        background: none;
        border-radius: 2px
    }

    .outreach-method-label input[name='outreach-method']:checked +.outreach-method-img {
        background: url('../svg/check-1.svg');
        background-repeat: no-repeat;
        background-position: center center;
        background-size: 12px 12px;
    }

    label[for='throughMe'], label[for='directly'] {
        margin-left: 0.2rem;
    }

    .share-btn {
        height: 2rem;
        width: 2rem;
    }

    .gradient {
        background: linear-gradient(180deg, rgba(83, 161, 216, 0.1) 0%, rgba(9, 144, 247, 0) 98.8%);
    }

    .thumb_icon {
        height: 60px;
        width: auto;
    }

    .stars {
        height: 17px;
        width: auto;
    }

    .form-section {
        padding: 8% 15px;
        background: rgba(83, 161, 216, 0.1);
    }

    .form-container {
        padding: 1rem;
        background: #FFFFFF;
        box-shadow: 0 0 50px rgba(24, 33, 44, 0.15);
        border-radius: 10px;
        max-width: 760px;

        .referral_form {
            padding: 2rem 1rem;
        }

        .custom_btn {
            float: right;
            width: 200px;
            font-size: 18px;
        }

        .form-group .form-control {
            background: rgba(24, 33, 44, 0.05);
            border-radius: 4px;
            border: none;
        }

        .referral_form_heading, .custom-checkbox {
            padding-left: 10px;
        }
    }

    .steps {
        position: relative;
    }

    /* Line */
    .steps>li::before {
        content: '';
        position: absolute;
        width: 1px;
        background-color: #fff;
        border-left: 1px dashed #53a1d8;
        top: 0;
        bottom: 0;
        left: -25px;
    }

    /* Circle */
    .steps>li::after {
        text-align: center;
        padding-top: 10px;
        z-index: 10;
        content: counter(item);
        position: absolute;
        width: 50px;
        height: 50px;
        color: #53a1d8;
        border: 1px solid #53a1d8;
        background-color: #fff;
        border-radius: 50%;
        top: 0;
        left: -50px;
        box-sizing: border-box;
    }

    /* Content */
    .steps>li {
        counter-increment: item;
        padding: 5px 0 0 20px;
        margin-left: 10px;
        min-height: 70px;
        position: relative;
        background-color: white;
        list-style: none;
    }

    .steps>li:nth-last-child(1)::before {
        width: 0px;
        border: none !important;
    }
}
