
.comparison_header {
    background-image: url('../img/compare_header1.png');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: top center;
    height: 100vh;
    position: relative;
    overflow: hidden;
    min-height: 850px;
}

.presentation_content {
    position: static;
    padding-top: 4%;
    text-align: center;
    color: #ffffff;
}

.your_choice {
    font-style: normal;
    font-weight: normal;
    margin-bottom: 0;
    font-size: 24px;
    line-height: 50px;
    color: #ffffff;
}

.title {
    font-style: normal;
    font-weight: 300;
    font-size: 70px;
    line-height: 80px;
}

.presentation_text_comparison, .presentation_text_mobile {
    font-style: normal;
    font-weight: normal;
    margin: 0 auto;
    text-justify: distribute;
    width: 65%;
    padding: 1rem 0;
    font-size: 24px;
    line-height: 36px;
    color: #ffffff !important;
}

.presentation_text_mobile {
    display: none;
}

.get-started-comparison {
    padding-bottom: 2rem;
}

.platform_screen {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 0);
    width: 60%;
    max-width: 750px;
}

.saas_title {
    font-style: normal;
    font-weight: 300;
    font-size: 44px;
    line-height: 52px;
    color: #18212c;
    max-width: 480px;
    margin-bottom: 3rem;
}

.saas_text {
    font-style: normal;
    font-weight: normal;
    font-size: 20px;
    line-height: 30px;
    color: #3c4147;
    max-width: 462px;
}

.saas_subtitle {
    font-weight: 300;
    font-size: 20px;
    line-height: 50px;
    color: #53A1D8;
    margin-bottom: 0;
}

.saas_comparison {
    padding: 6rem 0 2rem 0;
}

.icon_saas {
    background-image: url('../svg/icon_saas.svg');
    width: 65.15px;
    height: 45.91px;
}

.saas_infografik {
    width: 100%;
}

.table_section {
    background-color: rgba(83, 161, 216, 0.05);
    text-align: center;
    padding: 6rem 0;
}

.table_subtitle, .freerow_subtitle {
    margin-bottom: 0;
    font-style: normal;
    font-weight: 300;
    font-size: 20px;
    line-height: 50px;
    color: #53a1d8;
}

.table_title, .freerow_title {
    font-style: normal;
    font-weight: 300;
    font-size: 44px;
    line-height: 52px;
    color: #18212c;
    padding-bottom: 1.4rem;
}

.table_title {
    width: 80%;
    margin: 0 auto;
}

.table_text {
    font-style: normal;
    font-weight: normal;
    font-size: 20px;
    line-height: 30px;
    color: #3c4147;
}

.check_boxes {
    padding: 3rem 0 0 0;
    width: 80%;
    margin: 0 auto;
}

.check_boxes .comparison_checkbox {
    margin-left: 1.2rem;
}

.dropdown_mobile {
    display: none;
}

.big_cta {
    padding: 0.375rem 2rem;
    margin: 1rem 0;
    background: #53a1d8;
    border-radius: 6px;
    color: #fff;
    font-weight: 500;
    font-size: 22px;
    line-height: 36px;
    text-align: center;
}

.checkbox_wrapper {
    margin-right: 0.8rem;
}

.message {
    color: tomato;
}

.check {
    color: #53a1d8;
}

.table_header_wrap {
    padding: 4rem 0 3rem 0;
}

.table_wrapper {
    box-shadow: 0px 0px 50px rgba(24, 33, 44, 0.25);
    border-radius: 10px;
    background-color: #ffffff;
    overflow: hidden;
    margin: 0 2rem;
}

.comparison_tables {
    border-collapse: collapse;
    width: 100%;
    border: 4px solid #ffffff;
}

.comparison_tables td, .comparison_tables th {
    width: 20%;
}

.comparison_tables tr:first-child {
    width: 100%;
}

.comparison_tables tr:nth-child(odd) {
    background-color: rgba(24, 33, 44, 0.03);
}

/* table tr td:nth-child(2) {
    VENEDASH COLUMN

} */
.comparison_tables tr:not(:first-child):hover {
    background-color: #ffffff;
    box-shadow: 0px 0px 10px rgba(24, 33, 44, 0.25);
    padding-bottom: 62.25%;
}

.comparison_tables th, .comparison_table_td {
    padding-top: 12px;
    padding-bottom: 12px;
}

.comparison_tables tr th:first-child {
    font-style: normal;
    font-weight: bold;
    font-size: 15px;
    line-height: 30px;
    color: #18212C;
    text-transform: uppercase;
    border-bottom: 2px solid rgba(0, 0, 0, 0.05);
}

.comparison_tables tr:first-child th:first-child {
    border-radius: 10px 0px 0px 0px;
}

.comparison_tables tr:first-child th:last-child {
    border-radius: 0px 10px 0px 0px;
}

.comparison_tables tr:last-child td:first-child {
    border-radius: 0px 0px 0px 10px;
}

.comparison_tables tr:last-child td:last-child {
    border-radius: 0px 0px 10px 0px;
}

.comparison_tables tr th:first-child, .comparison_tables tr td:first-child {
    text-align: left;
    padding-left: 1rem;
}

.active_td, .not_active_td {
    background-repeat: no-repeat;
    background-size: 20px;
    background-position: center;
}

.active_td {
    background-image: url('../svg/active.svg');
}

.not_active_td {
    background-image: url('../svg/not_active.svg');
}

.table_venedash {
    width: 15%;
    background-color: #53A1D8;
    background-image: url('../img/logo_venedash_white.png');
    background-size: 120px;
    background-repeat: no-repeat;
    background-position: center;
}

.table_tune, .table_affise, .table_voluum, .table_offer18, .table_offerslook, .table_trackier, .table_orangear, .table_hugoffers, .table_fuseclick, .table_everflow {
    color: #ffffff;
    text-transform: uppercase;
}

.table_everflow {
    background-color: #f2da66;
}

.table_hugoffers {
    background-color: #516ccc;
}

.table_fuseclick {
    background-color: #005fcd;
}

.table_orangear {
    background-color: #ff9329;
}

.table_offerslook {
    background-color: #749e40;
}

.table_trackier {
    background-color: #2f60c3;
}

.table_affise {
    background-color: #662D91;
}

.table_tune {
    background-color: #007AFF;
}

.table_voluum {
    background-color: #C800A0;
}

.table_offer18 {
    background-color: #ff7423;
}
